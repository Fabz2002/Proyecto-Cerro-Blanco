---
import MainHead from '../components/MainHead.astro'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import '../styles/main.scss'
interface Props {
	title?: string | undefined
	description?: string | undefined
}

const { title, description } = Astro.props
const itemsilos = [
	{ nombre: 'Mision', href: 'mision' },
	{ nombre: 'Videos', href: 'videos' },
	{ nombre: 'Contactanos', href: 'contactanos' }
]

const copy =
	'Copyright © 2023 Seaman House S.A.C. Todos los derechos son reservados; Desarrollado por Fabrizio Diaz'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<MainHead title={title} description={description} />
	</head>
	<body>
		<Navbar items={itemsilos} />
		<slot />
		<Footer copyright={copy} />

		<script>
			// Add “loaded” class once the document has completely loaded.
			addEventListener('load', () =>
				document.documentElement.classList.add('loaded')
			)
		</script>
	</body>
</html>
